<div class="modal fade" id="twoFactorModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Two-Factor-Authentication</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Please enter the verification code from your mailbox</p>
                <div class="form-outline form-white mb-4">
                    <input type="text" name="code" required
                           class="form-control form-control-lg"
                           placeholder="Code" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>
                    Close
                </button>
                <button type="button" class="btn btn-success login-2FA-btn">
                    <i class="bi bi-check-circle me-1"></i>
                    Login
                </button>
            </div>
        </div>
    </div>
</div>