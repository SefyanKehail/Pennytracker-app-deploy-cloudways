{% extends 'layout.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('settings') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('settings') }}
{% endblock %}

{% block title %}Settings{% endblock %}

{% block content %}

    <div class="settings">
        <div class="top-container mb-4 row g-0 rounded-4 p-5">

            <div class="col-3 border-end border-3 d-flex flex-column gap-4">
                <h2>Settings</h2>
                <div class="list-group list-group-flush px-3">
                    <a href="/settings/profile"
                       class="list-group-item list-group-item-action {{ activeRoute == 'profile' ? 'active' : '' }} fs-5 d-flex align-items-center">
                        <i class="bi bi-person me-2"></i>
                        Profile
                    </a>
                    <a href="/settings/authentication"
                       class="list-group-item list-group-item-action {{ activeRoute == 'authentication' ? 'active' : '' }} fs-5 d-flex align-items-center">
                        <i class="bi bi-shield-lock me-2"></i>
                        Authentication
                    </a>
                    <a href="/settings/help" class="list-group-item list-group-item-action {{ activeRoute == 'help' ? 'active' : '' }} fs-5 d-flex align-items-center">
                        <i class="bi bi-question-circle me-2"></i>
                        Help
                    </a>
                </div>
            </div>

            <div class="col p-4">
                <div class="active-settings">
                    {% block settings_content %}{% endblock %}
                </div>
            </div>
{% endblock %}